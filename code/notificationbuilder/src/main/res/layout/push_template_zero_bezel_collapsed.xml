<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zero_bezel_collapsed_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/DayNightTheme">

    <ImageView
        android:id="@+id/collapsed_template_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/gradient_template_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/collapsed_template_image"
        android:background="@drawable/zero_bazel_gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignBottom="@+id/collapsed_template_image"
        android:paddingLeft="@dimen/zero_bezel_padding_horizontal"
        android:paddingStart="@dimen/zero_bezel_padding_horizontal"
        android:paddingRight="@dimen/zero_bezel_padding_horizontal"
        android:paddingEnd="@dimen/zero_bezel_padding_horizontal">

        <TextView
            android:id="@+id/notification_title"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/notification_body"
            style="@style/Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textAlignment="viewStart"/>

    </LinearLayout>
</RelativeLayout>